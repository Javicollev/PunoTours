doctype html
html(lang='es').no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    link(rel='icon', type='image/x-icon', href='img/favicon.icon')
    link(rel='stylesheet', href='css/app.css')
    script(src='js/librerias/modernizr2.8.3.js')
  body
    header#header
      button.menu
      h1#logo
        img(src='img/flicker-1.jpg', alt='logo')
        span titulo
      nav#nav
        - var items = ['lago titicaca', 'ticket de bus', 'tours privados', 'turismo vivencial']
        ul.lista
          for item in items
            li.item
              a(href="#{item.replace(/\s/g,'-')}.html", title=item)= item

    block contenido

    footer#footer
      ul.footerLista
        li: a Hospedaje
        li: a Formas de Pago
        li: a Catalogo de Puno
        li: a Datos utiles
        li: a Nosotros
        li: a Contacto

      ul.redes-sociales
        li: a(haref='#') facebook
        li: a(haref='#') tuiwtter
        li: a(haref='#') youtube

    block scripts
      script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
      script(src="src/js/script.js")